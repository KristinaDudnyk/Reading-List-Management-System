<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Books List</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/user.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="card-container">
      <div class="user-card">
        <h1>User Details</h1>
        <p><span>First Name: </span><%= user.first_name %> <br> <span>Last Name:</span> <%= user.last_name %></p>
        <p class="user-username"><span>Username:</span> <%= user.username %></p>
        <p class="user-email"><span>Email:</span> <%= user.email %></p>
        <p class="user-id"><span>UserId</span>: <%= user.id %></p>
      </div>

      <div class="user-card">
        <h1>User Statistics</h1>
          <p><span>No. Books Read: </span><%= 20 %> </p>
          <p><span>No. of books for horror: </span><%= 20 %> </p>
          <p><span>No. Books Read: </span><%= 20 %> </p>
      </div>
    </div>
    
    <%- include('partials/footer') %>
    <script>
      const username = document.querySelector(".user-username").outerText;
      const email = document.querySelector(".user-email").outerText;

      async function putUserInfoToLocalStorage(username, email) {
        try {
          const response = await fetch(
            `/user/obj?username=${username}&email=${email}`,
          );
          const data = await response.json();
          if (data.error) {
            console.error(data.error);
            return;
          }

          localStorage.setItem("user", JSON.stringify(data)); // Store in local storage
        } catch (error) {
          console.error("Error fetching berry:", error);
        }
      }

      putUserInfoToLocalStorage(username, email);
    </script>
  </body>
</html>
